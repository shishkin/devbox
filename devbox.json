{
  "variables": {
    "username": "vagrant",
    "password": "vagrant"
  },
  "builders": [{
    "type": "virtualbox-iso",
    "vm_name": "devbox",
    "guest_os_type": "Ubuntu_64",

    "iso_url": "iso/xubuntu-14.04-desktop-amd64.iso",
    "iso_checksum": "ae446659057ee49e57773bf446398856",
    "iso_checksum_type": "none",

    "http_directory" : "./preseed",
    "http_port_min" : 9001,
    "http_port_max" : 9001,
    
    "boot_wait": "3s",
    "boot_command": [
      "<enter><enter><esc><enter> <wait>",
      "/casper/vmlinuz.efi url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/trusty.cfg ",
      "hostname={{ .Name }} ",
      "initrd=/casper/initrd.lz boot=casper ",
      "automatic-ubiquity quiet splash noprompt auto=true --<enter><wait>"
    ],
    "guest_additions_mode": "disable",

    "ssh_username": "{{user `username`}}",
    "ssh_password": "{{user `password`}}",
    "ssh_wait_timeout": "30m",
    "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown -P now",

    "disk_size": 80000,
    "hard_drive_interface": "sata",
    "headless": false,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "2"]
    ]
  }],
  "post-processors": ["vagrant"]
}
